@model IEnumerable<Shop.Entities.Equipment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-default" style="margin-top:10px;">
    <div class="panel-heading">
        <h3>All Equipment</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Vin</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.EquipId</td>
                    <td>@Html.ActionLink(item.SharkName, "Edit", new { item.EquipId })</td>
                    <td class="text-right">@item.EquipVin</td>
                    <td class="text-center">@using (Html.BeginForm("Delete", "Admin")) {
                        @Html.Hidden("EquipId", item.EquipId)
                        <input type="submit" class="btn btn-default btn-xs" value="Delete" />
                    }
                    </td >
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add Equipment", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
