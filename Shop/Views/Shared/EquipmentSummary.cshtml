@model Shop.Entities.Equipment

<div class="well">
    @if (Model.ImageData != null)
    {
        <div>
            <span class="pull-right label label-danger" style="margin:10px 2px 10px 2px;">@Model.EquipVin</span>
            <span class="pull-right label label-danger" style="margin:10px 2px 10px 2px;">@Model.EquipModel</span>
            <span class="pull-right label label-danger" style="margin:10px 2px 10px 2px;">@Model.EquipMake</span>
            <span class="pull-right label label-danger" style="margin:10px 2px 10px 2px;">@Model.EquipYear</span>   
        </div>
        <div class="pull-left" style="margin-right:10px;">
            <img class="img-thumbnail" width="100" height="100" src="@Url.Action("GetImage", "Equipment", new { Model.EquipId })" />                    
        </div>
    }
    <h3>
        <strong>@Model.SharkName</strong>              
    </h3>     
    <span class="lead">@Model.EquipDescription</span>
</div>